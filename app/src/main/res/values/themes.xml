<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyDecisionFriend" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="formato_boton" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">311dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:shape">rectangle</item>
        <item name="android:color">@color/colorBackground</item>
        <item name="android:radius">75dp</item>
    </style>
    <style name="txt_titulo">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#5DB075</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="txt_titulo_negro">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- Estilo para subtitulos -->
    <style name="txt_subtitulo" parent="txt_titulo">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="txt_subtitulo_blanco" parent="txt_subtitulo">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="txt_subtitulo_gris" parent="txt_subtitulo">
        <item name="android:textColor">#666666</item>
    </style>
    <style name="txt_subtitulo_negro" parent="txt_subtitulo">
        <item name="android:textColor">#000000</item>
    </style>
    <!-- Estilo para textos normales -->
    <style name="txt_normal" parent="txt_titulo">
        <item name="android:textSize">10sp</item>
    </style>
    <style name="txt_normal_blanco" parent="txt_normal">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="txt_normal_gris" parent="txt_normal">
        <item name="android:textColor">#666666</item>
    </style>
    <style name="txt_normal_error" parent="txt_normal">
        <item name="android:textColor">#EF5350</item>
    </style>
    <!-- Estilo para texto boton -->
    <style name="txt_boton_blanco" parent="txt_titulo">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>